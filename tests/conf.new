[setup]

    input_directory = /home/viktor/Downloads/input
    output_directory = /home/viktor/pool
    file_extension = '.tif'
    GPUs = 0 1

[general]

    # pixel size is in A/pix
    pixel_size = 0.53
    # voltage is in kV
    voltage = 300
    # dose per frame is in (e/A^2)
    dose_per_frame  = 1
    cs = 2.62
    amplitude_contrast = 0.1

[motioncor]

    timeout = 300
    trials = 3
    executable = motioncor

    InTiff = %(input)s
    OutMrc = %(output)s
    Gain = /home/viktor/Downloads/20s_test_data/SuperRef_20S_000_Mar28_14.49.23.mrc
    Patch = 5 5
    FtBin = 2
    Bft = 300
    Throw = 2
    Gpu = %(GPU_ID)s

[gctf]

    timeout = 300
    trials = 3
    cc_cutoff = 0.75
    executable = gctf

    Gpu = %(GPU_ID)s
    phase_shift_L = 10
    phase_shift_H = 175
    phase_shift_S = 10
    phase_shift_T = 1
    dstep = 1.06
    defL = 3000
    defH = 7000
    defS = 500
    astm = 1000
    bfac = 100
    resL = 20.0
    resH = 3.0
    boxsize = 1024
    do_EPA = 1
    refine_after_EPA = 0
    convsize = 30
    do_Hres_ref = 1
    Href_resL = 15.0
    Href_resH = 3.0
    Href_bfac = 50
    estimate_B = 1
    B_resL = 20.0
    B_resH = 3.0
    do_validation = 1
